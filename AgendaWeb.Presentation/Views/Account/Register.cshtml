@* Definindo a classe de modelo desta página *@
@model AgendaWeb.Presentation.Models.AccountRegisterModel

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>

    <!-- referência para os arquivos CSS do projeto -->
    <link rel="stylesheet" href="/css/bootstrap.min.css"/>

</head>
<body class="bg-secondary">

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-4 offset-4">

                <div class="card">
                    <div class="card-body">

                        <div class="text-center">
                            <h5>Projeto <strong>AgendaWeb</strong></h5>
                            <p>Cadastrar Conta de Usuário</p>
                            <hr/>
                        </div>

                        <div class="mb-2 text-success">
                            <strong>@TempData["MensagemSucesso"]</strong>
                        </div>

                        <div class="mb-2 text-danger">
                            <strong>@TempData["MensagemErro"]</strong>
                        </div>

                        @* Formulário para cadastro de usuário *@
                        @using(Html.BeginForm())
                        {
                            <label>Nome do usuário:</label>
                            @Html.TextBoxFor(model => model.Nome, 
                                new { @class = "form-control", @placeholder = "Digite aqui" })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Nome)
                            </span>
                            <br/>

                            <label>Email de acesso:</label>
                            @Html.TextBoxFor(model => model.Email, 
                                new { @class = "form-control", @placeholder = "Digite aqui" })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Email)
                            </span>
                            <br/>

                            <label>Senha de acesso:</label>
                            @Html.PasswordFor(model => model.Senha, 
                                new { @class = "form-control", @placeholder = "Digite aqui" })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.Senha)
                            </span>
                            <br/>

                            <label>Confirme sua senha:</label>
                            @Html.PasswordFor(model => model.SenhaConfirmacao, 
                                new { @class = "form-control", @placeholder = "Digite aqui" })
                            <span class="text-danger">
                                @Html.ValidationMessageFor(model => model.SenhaConfirmacao)
                            </span>
                            <br/>

                            <div class="d-grid">
                                <input type="submit" value="Realizar Cadastro"
                                    class="btn btn-success"/>
                            </div>
                        }

                        <div class="d-grid mt-2">
                            <a href="/Account/Login" class="btn btn-primary">
                                Já possui conta? <strong>Acesse aqui!</strong>
                            </a>
                        </div>

                        <div class="text-center mt-2">
                            <small>AgendaWeb v1.0.0</small>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- arquivos do tipo javascript -->
    <script src="/js/bootstrap.min.js"></script>

</body>
</html>



