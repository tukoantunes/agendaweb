@* Classe de modelo utilizada nesta página *@
@model AgendaWeb.Presentation.Models.EventoRelatorioModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h5>Relatório de Eventos</h5>
Informe o período de datas para pesquisa de eventos.
<hr />


@* Formulário para pesquisa *@
@using (Html.BeginForm())
{
    <div class="row mb-3">
        <div class="col-md-3">

            @Html.TextBoxFor(model => model.DataMin,
                new { @class = "form-control", @type = "date" })

            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataMin)
            </span>

        </div>
        <div class="col-md-3">

            @Html.TextBoxFor(model => model.DataMax,
                new { @class = "form-control", @type = "date" })

            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataMin)
            </span>

        </div>
        <div class="col-md-2">

            <div class="mt-2">
                @Html.RadioButtonFor(model => model.Ativo, "1") <span>Ativos</span>
                <span>&nbsp;</span>
                @Html.RadioButtonFor(model => model.Ativo, "0") <span>Inativos</span>
                <br />

                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Ativo)
                </span>
            </div>

        </div>
        <div class="col-md-2">

            <div class="mt-2">
                @Html.RadioButtonFor(model => model.Formato, "PDF") <span>PDF</span>
                <span>&nbsp;</span>
                @Html.RadioButtonFor(model => model.Formato, "EXCEL") <span>Excel</span>
                <br />

                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Formato)
                </span>
            </div>

        </div>
        <div class="col-md-2">

            <input type="submit" value="Gerar Relatório"
               class="btn btn-success" />

        </div>
    </div>
}



